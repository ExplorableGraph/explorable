{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "packages/async/src/**/*.js",
    "packages/async/test/**/*.js",
    "packages/sync/src/**/*.js",
    "packages/sync/test/**/*.js"
  ]
}
